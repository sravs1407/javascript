<p1 id="sub"></p1>
<br>
<p1 id="mul"></p1>
<br>
<p1 id="div"></p1>
<br>
<p1 id="rem"></p1>
<button onclick="mat()">mat</button>
<script>
function mat(){
var a,b;
a=prompt("enter first value");
b=prompt("enter second value")
if(confirm("do u want to perform addition?")==true){
document.getElementById("add").innerHTML="a+b="+(a+b);
}
if(confirm("do u want to perform subtraction?")==true){
document.getElementById("sub").innerHTML="a-b="+(a-b);
}
if(confirm("do u want to perform multiplication?")==true){
document.getElementById("mul").innerHTML="a*b="+(a*b);
}
if(confirm("do u want to perform division?")==true){
document.getElementById("div").innerHTML="a/b="+(a/b);
}
if(confirm("do u want to perform remainder?")==true){
document.getElementById("rem").innerHTML="a%b="+(a%b);
}
}
</script>
